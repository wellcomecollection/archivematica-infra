[
  {
    "name": "nginx",
    "image": "${nginx_image}",
    "cpu": 256,
    "memory": 512,
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group_name}",
        "awslogs-region": "${log_group_region}",
        "awslogs-stream-prefix": "${log_group_prefix}"
      }
    },
    "portMappings": [
      {
        "containerPort": 9090,
        "hostPort": 9090
      },
      {
        "containerPort": 8080,
        "hostPort": 8080
      }
    ]
  },
  {
    "name": "dashboard",
    "image": "${dashboard_image}",
    "cpu": 256,
    "memory": 512,
    "essential": true,
    "mountPoints": [
      {
        "sourceVolume": "pipeline-data",
        "containerPath": "/var/archivematica/sharedDirectory"
      }
    ],
    "environment": [
      {
        "name": "FORWARDED_ALLOW_IPS",
        "value": "*"
      },
      {
        "name": "AM_GUNICORN_ACCESSLOG",
        "value": "/dev/null"
      },
      {
        "name": "AM_GUNICORN_RELOAD",
        "value": "true"
      },
      {
        "name": "AM_GUNICORN_RELOAD_ENGINE",
        "value": "auto"
      },
      {
        "name": "ARCHIVEMATICA_DASHBOARD_DASHBOARD_GEARMAN_SERVER",
        "value": "${gearmand_hostname}:4730"
      },
      {
        "name": "ARCHIVEMATICA_DASHBOARD_DASHBOARD_ELASTICSEARCH_SERVER",
        "value": "${elasticsearch_endpoint}"
      },
      {
        "name": "ARCHIVEMATICA_DASHBOARD_CLIENT_USER",
        "value": "${rds_username}"
      },
      {
        "name": "ARCHIVEMATICA_DASHBOARD_CLIENT_PASSWORD",
        "value": "${rds_password}"
      },
      {
        "name": "ARCHIVEMATICA_DASHBOARD_CLIENT_HOST",
        "value": "${rds_host}"
      },
      {
        "name": "ARCHIVEMATICA_DASHBOARD_CLIENT_PORT",
        "value": "${rds_port}"
      },
      {
        "name": "ARCHIVEMATICA_DASHBOARD_CLIENT_DATABASE",
        "value": "MCP"
      },
      {
        "name": "ARCHIVEMATICA_DASHBOARD_SEARCH_ENABLED",
        "value": "true"
      },
      {
        "name": "AM_GUNICORN_BIND",
        "value": "0.0.0.0:9000"
      },
      {
        "name": "WELLCOME_SS_URL",
        "value": "http://${storage_service_host}:${storage_service_port}"
      },
      {
        "name": "WELLCOME_SITE_URL",
        "value": "http://localhost:9000"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group_name}",
        "awslogs-region": "${log_group_region}",
        "awslogs-stream-prefix": "${log_group_prefix}"
      }
    }
  }
]