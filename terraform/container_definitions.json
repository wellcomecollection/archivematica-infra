[
  {
    "name": "gearmand",
    "image": "artefactual/gearmand:1.1.17-alpine",
    "cpu": 256,
    "memory": 512,
    "essential": true,
    "user": "gearman",
    "command": [
      "--queue-type=redis", "--redis-server=139.162.244.147", "--redis-port=6379"
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${log_group_name}",
          "awslogs-region": "${log_group_region}",
          "awslogs-stream-prefix": "${log_group_prefix}"
        }
    }
  },
  {
    "name": "fits",
    "image": "artefactual/fits-ngserver:0.8.4",
    "cpu": 256,
    "memory": 512,
    "essential": true,
    "mountPoints": [
      {
        "sourceVolume": "pipeline-data",
        "containerPath": "/var/archivematica/sharedDirectory"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${log_group_name}",
          "awslogs-region": "${log_group_region}",
          "awslogs-stream-prefix": "${log_group_prefix}"
        }
    }
  },
  {
    "name": "clamavd",
    "image": "artefactual/clamav:latest",
    "cpu": 256,
    "memory": 512,
    "essential": true,
    "mountPoints": [
      {
        "sourceVolume": "pipeline-data",
        "containerPath": "/var/archivematica/sharedDirectory"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${log_group_name}",
          "awslogs-region": "${log_group_region}",
          "awslogs-stream-prefix": "${log_group_prefix}"
        }
    }
  },
  {
    "name": "nginx",
    "image": "nginx:stable-alpine",
    "cpu": 256,
    "memory": 512,
    "essential": true
  },
  {
    "name": "dashboard",
    "image": "${dashboard_image}",
    "cpu": 256,
    "memory": 512,
    "essential": true,
    "mountPoints": [
      {
        "sourceVolume": "pipeline-data",
        "containerPath": "/var/archivematica/sharedDirectory"
      }
    ],
    "environment": [
      {
        "name": "FORWARDED_ALLOW_IPS",
        "value": "*"
      },
      {
        "name": "AM_GUNICORN_ACCESSLOG",
        "value": "/dev/null"
      },
      {
        "name": "AM_GUNICORN_RELOAD",
        "value": "true"
      },
      {
        "name": "AM_GUNICORN_RELOAD_ENGINE",
        "value": "auto"
      },
      {
        "name": "DJANGO_SETTINGS_MODULE",
        "value": "settings.local"
      },
      {
        "name": "ARCHIVEMATICA_DASHBOARD_DASHBOARD_GEARMAN_SERVER",
        "value": "gearmand:4730"
      },
      {
        "name": "ARCHIVEMATICA_DASHBOARD_DASHBOARD_ELASTICSEARCH_SERVER",
        "value": "elastic@changeme:139.162.244.147:9200"
      },
      {
        "name": "ARCHIVEMATICA_DASHBOARD_CLIENT_USER",
        "value": "archivematica"
      },
      {
        "name": "ARCHIVEMATICA_DASHBOARD_CLIENT_PASSWORD",
        "value": "demo"
      },
      {
        "name": "ARCHIVEMATICA_DASHBOARD_CLIENT_HOST",
        "value": "mysql"
      },
      {
        "name": "ARCHIVEMATICA_DASHBOARD_CLIENT_DATABASE",
        "value": "MCP"
      },
      {
        "name": "ARCHIVEMATICA_DASHBOARD_SEARCH_ENABLED",
        "value": "true"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${log_group_name}",
          "awslogs-region": "${log_group_region}",
          "awslogs-stream-prefix": "${log_group_prefix}"
        }
    }
  },
  {
    "name": "mcp-client",
    "image": "${mcp_client_image}",
    "cpu": 256,
    "memory": 512,
    "essential": true,
    "mountPoints": [
      {
        "sourceVolume": "pipeline-data",
        "containerPath": "/var/archivematica/sharedDirectory"
      }
    ],
    "environment": [
      {
        "name": "DJANGO_SECRET_KEY",
        "value": "12345"
      },
      {
        "name": "DJANGO_SETTINGS_MODULE",
        "value": "settings.common"
      },
      {
        "name": "MAILGUN_SERVER",
        "value": "fits"
      },
      {
        "name": "MAILGUN_PORT",
        "value": "2113"
      },
      {
        "name": "ARCHIVEMATICA_MCPCLIENT_CLIENT_USER",
        "value": "archivematica"
      },
      {
        "name": "ARCHIVEMATICA_MCPCLIENT_CLIENT_PASSWORD",
        "value": "demo"
      },
      {
        "name": "ARCHIVEMATICA_MCPCLIENT_CLIENT_HOST",
        "value": "139.162.244.147"
      },
      {
        "name": "ARCHIVEMATICA_MCPCLIENT_CLIENT_DATABASE",
        "value": "MCP"
      },
      {
        "name": "ARCHIVEMATICA_MCPCLIENT_ELASTICSEARCHSERVER",
        "value": "elastic@changeme:139.162.244.147:9200"
      },
      {
        "name": "ARCHIVEMATICA_MCPCLIENT_MCPCLIENT_MCPARCHIVEMATICASERVER",
        "value": "gearmand:4730"
      },
      {
        "name": "ARCHIVEMATICA_MCPCLIENT_MCPCLIENT_SEARCH_ENABLED",
        "value": "true"
      },
      {
        "name": "ARCHIVEMATICA_MCPCLIENT_MCPCLIENT_CAPTURE_CLIENT_SCRIPT_OUTPUT",
        "value": "true"
      },
      {
        "name": "ARCHIVEMATICA_MCPCLIENT_MCPCLIENT_CLAMAV_SERVER",
        "value": "clamavd:3310"
      },
      {
        "name": "ARCHIVEMATICA_MCPCLIENT_MCPCLIENT_CLAMAV_CLIENT_BACKEND",
        "value": "clamdscanner"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${log_group_name}",
          "awslogs-region": "${log_group_region}",
          "awslogs-stream-prefix": "${log_group_prefix}"
        }
    }
  },
  {
    "name": "mcp-server",
    "image": "${mcp_server_image}",
    "cpu": 256,
    "memory": 512,
    "essential": true,
    "mountPoints": [
      {
        "sourceVolume": "pipeline-data",
        "containerPath": "/var/archivematica/sharedDirectory"
      }
    ],
    "environment": [
      {
        "name": "DJANGO_SECRET_KEY",
        "value": "12345"
      },
      {
        "name": "DJANGO_SETTINGS_MODULE",
        "value": "settings.local"
      },
      {
        "name": "ARCHIVEMATICA_MCPSERVER_CLIENT_USER",
        "value": "archivematica"
      },
      {
        "name": "ARCHIVEMATICA_MCPSERVER_CLIENT_PASSWORD",
        "value": "demo"
      },
      {
        "name": "ARCHIVEMATICA_MCPSERVER_CLIENT_HOST",
        "value": "139.162.244.147"
      },
      {
        "name": "ARCHIVEMATICA_MCPSERVER_CLIENT_DATABASE",
        "value": "MCP"
      },
      {
        "name": "ARCHIVEMATICA_MCPSERVER_MCPSERVER_MCPARCHIVEMATICA_SERVER",
        "value": "gearmand:4730"
      },
      {
        "name": "ARCHIVEMATICA_MCPSERVER_SEARCH_ENABLED",
        "value": "true"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${log_group_name}",
          "awslogs-region": "${log_group_region}",
          "awslogs-stream-prefix": "${log_group_prefix}"
        }
    }
  },
  {
    "name": "storage-service",
    "image": "${storage_service_image}",
    "cpu": 256,
    "memory": 512,
    "essential": true,
    "mountPoints": [
      {
        "sourceVolume": "pipeline-data",
        "containerPath": "/var/archivematica/sharedDirectory"
      },
      {
        "sourceVolume": "location-data",
        "containerPath": "/home"
      },
      {
        "sourceVolume": "staging-data",
        "containerPath": "/var/archivematica/storage_service"
      }
    ],
    "environment": [
      {
        "name": "FORWARDED_ALLOW_IPS",
        "value": "*"
      },
      {
        "name": "AM_GUNICORN_ACCESSLOG",
        "value": "/dev/null"
      },
      {
        "name": "AM_GUNICORN_RELOAD",
        "value": "true"
      },
      {
        "name": "AM_GUNICORN_RELOAD_ENGINE",
        "value": "auto"
      },
      {
        "name": "DJANGO_SETTINGS_MODULE",
        "value": "storage_service.settings.local"
      },
      {
        "name": "SS_DBURL",
        "value": "mysql://archivem,atica:demo@139.162.244.147:3306/SS"
      },
      {
        "name": "SS_GNPUG_HOME_PATH",
        "value": "/var/archivematica/storage_service/.gnupg"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${log_group_name}",
          "awslogs-region": "${log_group_region}",
          "awslogs-stream-prefix": "${log_group_prefix}"
        }
    }
  }
]